{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "dom",
         "ES2016"
      ],
      "target": "es5",
      "typeRoots": [
         "node_modules/@types"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      // Additions
      "esModuleInterop": true,
   },
}